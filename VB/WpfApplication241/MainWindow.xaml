<dx:ThemedWindow x:Class="WpfApplication241.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"                 
                 xmlns:local="clr-namespace:WpfApplication241"
                 Width="525"
                 Height="350"
                 Title="MainWindow">
    <dx:ThemedWindow.DataContext>
        <local:MainViewModel/>
    </dx:ThemedWindow.DataContext>

    <Grid>
        <dxe:DateEdit Margin="30,0" 
                      VerticalAlignment="Center">
            <dxe:DateEdit.PopupContentTemplate>
                <ControlTemplate>
                    <dxe:DateNavigator DisabledDates="{Binding RelativeSource={RelativeSource Self}, Path=(dxe:BaseEdit.OwnerEdit).DataContext.DisabledDates}"
                                       IsMultiSelect="False">
                        <dxe:DateNavigator.StyleSettings>
                            <dxe:DateNavigatorOutlookStyleSettings />
                        </dxe:DateNavigator.StyleSettings>
                    </dxe:DateNavigator>
                </ControlTemplate>
            </dxe:DateEdit.PopupContentTemplate>
        </dxe:DateEdit>
    </Grid>
</dx:ThemedWindow>
